#
# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!


# Modifiers definitions
set $alt Mod1
set $mod Mod4

# movement and color variable definitions
set $left h
set $down j
set $up k
set $right l
set_from_resource $active i3wm.color0     #000000
set_from_resource $inactive i3wm.color1   #000000
set_from_resource $text_act i3wm.color2   #000000
set_from_resource $text_inact i3wm.color3 #000000
set_from_resource $urgent i3wm.color4     #000000
set_from_resource $text_urg i3wm.color5   #000000
set_from_resource $main_color0  i3wm.color6 #000000
set_from_resource $main_color1  i3wm.color7 #000000

set_from_resource $font i3wm.font 

# font from xresources file
font pango:$font 12 

# no longer needs xss-lock to lock screen after wake from suspend as
# either xautolock or the exit mode suspend option run the lock script

# startup programs
exec --no-startup-id nm-applet
exec xautolock -time 10 -locker ~/bin/blur_lock -killtime 15 -killer 'systemctl suspend' -detectsleep
exec_always ~/bin/screenlayout1.sh
exec_always xrdb ~/.Xresources
exec picom --config ./.config/picom.conf 
gaps inner 8


# non default bindings
bindsym $mod+Shift+x exec ~/bin/blur_lock
bindsym $mod+Shift+p exec systemctl --user restart spotifyd.service
bindsym $mod+Return exec alacritty
bindsym $mod+minus workspace $ws9; exec alacritty -e spt
bindsym $mod+Shift+f workspace $ws2; exec alacritty -e vifm


# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status

bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status


# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod


# kill focused window
bindsym $mod+Shift+q kill


# start dmenu 
bindsym $mod+d exec dmenu_run -fn $font:size=18 -sb '$main_color0'


# change focus
bindsym $mod$left focus left
bindsym $mod$down focus down
bindsym $mod$up focus up
bindsym $mod$right focus right


# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right


# move focused window
bindsym $mod+$alt+$left move left
bindsym $mod+$alt+$down move down
bindsym $mod+$alt+$up move up
bindsym $mod+$alt+$right move right


# alternatively, you can use the cursor keys:
bindsym $mod+$alt++Left move left
bindsym $mod+$alt++Down move down
bindsym $mod+$alt++Up move up
bindsym $mod+$alt++Right move right


# split in horizontal orientation
bindsym $mod+semicolon split h

# split in vertical orientation
bindsym $mod+v split v


# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle


# change container layout (stacked, tabbed, toggle split)
# removed stacked and tabbed bindings because i don't use them
bindsym $mod+e layout toggle split


# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent


# Workspace names
set $ws1 "1: "
set $ws2 "2: "
set $ws3 "3: "
set $ws4 "4: "
set $ws5 "5: "
set $ws6 "6: ?"
set $ws7 "7: "
set $ws8 "8: "
set $ws9 "9: "


# switch to workspace
bindsym $mod+7 workspace number $ws1
bindsym $mod+8 workspace number $ws2
bindsym $mod+9 workspace number $ws3
bindsym $mod+0 workspace number $ws4
bindsym $mod+y workspace number $ws5
bindsym $mod+u workspace number $ws6
bindsym $mod+i workspace number $ws7
bindsym $mod+o workspace number $ws8
bindsym $mod+p workspace number $ws9


# bind workspaces to specific monitors
set $monitor_hdmi "HDMI-A-0"
set $monitor_vga "DisplayPort-0"

workspace $ws1 output $monitor_hdmi
workspace $ws2 output $monitor_vga
workspace $ws3 output $monitor_hdmi
workspace $ws4 output $monitor_hdmi
workspace $ws5 output $monitor_hdmi
#workspace $ws6 output $monitor_hdmi
workspace $ws7 output $monitor_hdmi
workspace $ws8 output $monitor_vga
workspace $ws9 output $monitor_vga


# move focused container to workspace
bindsym $mod+$alt+7 move container to workspace number $ws1
bindsym $mod+$alt+8 move container to workspace number $ws2
bindsym $mod+$alt+9 move container to workspace number $ws3
bindsym $mod+$alt+0 move container to workspace number $ws4
bindsym $mod+$alt+y move container to workspace number $ws5
bindsym $mod+$alt+u move container to workspace number $ws6
bindsym $mod+$alt+i move container to workspace number $ws7
bindsym $mod+$alt+o move container to workspace number $ws8
bindsym $mod+$alt+p move container to workspace number $ws9


# assign aplications to specific workspaces
assign [class="^firefox"] $ws1
assign [class="^Thunar"] $ws2
assign [class="Zathura"] $ws4
assign [class="Gimp"] $ws5
assign [class="^Microsoft Teams - Preview"] $ws7
assign [class="^discord"] $ws8

# spotify does not set a class name on startup 
for_window [class="^Spotify"] move to workspace $ws9




# Window colours
#                          border      background   text     indicator
client.focused              $active     $active     $text_act   $urgent 
client.focused_inactive     $inactive   $inactive   $text_inact $urgent 
client.unfocused            $inactive   $inactive   $text_inact $urgent 
client.urgent               $urgent     $urgent     $text_urg   $urgent 


# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart


#   modes

#   mode for exiting
mode "exit: [l]ogout, [r]eboot, [p]ower off, [s]uspend" {

        bindsym l exec i3-msg exit
        bindsym r exec systemctl reboot
        bindsym p exec systemctl poweroff
        bindsym s \
                mode "default"; \
                exec ~/bin/blur_lock;\
                exec systemctl suspend
        bindsym Escape mode "default"
        bindsym Return mode "default"
        bindsym $mod+Shift+e mode "default"
}

bindsym $mod+Shift+e mode "exit: [l]ogout, [r]eboot, [p]ower off, [s]uspend"


# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym $left resize shrink width 10 px or 10 ppt
        bindsym $down resize grow height 10 px or 10 ppt
        bindsym $up resize shrink height 9 px or 10 ppt
        bindsym $right resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"


#   Take screenshots 
mode "Screenshot: [r]egion, [f]ull display, [c]urrent window" {
        bindsym r --release\
            mode "default"; exec "scrot -s ~/Pictures/Screenshots/"
        bindsym f\
            mode "default"; exec "scrot -m  ~/Pictures/Screenshots/"
        bindsym c\
            mode "default"; exec "scrot -u ~/Pictures/Screenshots/"
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+c mode "default"
}

bindsym $mod+c mode "Screenshot: [r]egion, [f]ull display, [c]urrent window" 
 

#   Control spotify and spotifyd player, sink volume and switch between sinks
mode "Media"{
        bindsym $Left exec "playerctl --player=spotify,spotifyd previous"
        bindsym $Right exec "playerctl --player=spotify,spotifyd next"
        bindsym $Up exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
        bindsym $Down exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
        bindsym Right exec ~/bin/next_sink
        bindsym v workspace $ws9; exec alacritty -e cava
        bindsym space exec "playerctl --player=spotify,spotifyd play-pause"
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+m mode "default"
}

bindsym $mod+m mode "Media"


# Bar command 
bar {
        status_command polybar main

mode invisible
}


# packages needed (can be replaced by similar ones)
#
# xss-lock, nitrogen, dmenu, pactl, scrot, xrdb(also the .Xresources file)
# polybar, xautolock, font awesome, picom
