bindsym $mod+o workspace number $ws9
bindsym $mod+p workspace number $ws10

# bind workspaces to specific monitors
set $monitor_hdmi "HDMI-A-0"
set $monitor_vga "DisplayPort-0"

workspace $ws1 output $monitor_hdmi
workspace $ws2 output $monitor_vga
workspace $ws7 output $monitor_hdmi
workspace $ws9 output $monitor_vga

# move focused container to workspace
